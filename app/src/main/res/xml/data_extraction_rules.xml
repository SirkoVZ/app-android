<?xml version="1.0" encoding="utf-8"?>
<!-- data_extraction_rules.xml -->
<!-- Datei: app/src/main/res/xml/data_extraction_rules.xml -->
<!-- Android 12+ (API 31+) Data Extraction Rules -->

<data-extraction-rules>
    <cloud-backup>
        <!-- Alles sichern außer sensible Daten -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>

        <!-- Sensible Daten ausschließen -->
        <exclude domain="sharedpref" path="auth_tokens.xml"/>
        <exclude domain="database" path="secure.db"/>
    </cloud-backup>

    <device-transfer>
        <!-- Beim Gerätewechsel alles übertragen -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
    </device-transfer>
</data-extraction-rules>